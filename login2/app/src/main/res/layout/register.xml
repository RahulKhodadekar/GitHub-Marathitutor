<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background1"
    tools:context=".Register">


    <EditText
        android:id="@+id/login_id"
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:drawableStart="@drawable/login_id_drawable"
        android:drawableLeft="@drawable/login_id_drawable"
        android:drawablePadding="10dp"
        android:hint="Login Id"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />

    <EditText
        android:id="@+id/mail_id"
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:drawableStart="@drawable/mail_id_drawable"
        android:drawableLeft="@drawable/login_id_drawable"
        android:drawablePadding="10dp"
        android:hint="Email Id"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <EditText
        android:id="@+id/mobile_no"
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:drawableStart="@drawable/mobile_id_drawable"
        android:drawableLeft="@drawable/mobile_id_drawable"
        android:drawablePadding="10dp"
        android:hint="Mobile No."
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <EditText
        android:id="@+id/password_id"
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:drawableStart="@drawable/password_drawable"
        android:drawableLeft="@drawable/password_drawable"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <EditText
        android:id="@+id/cpassword"
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:drawableStart="@drawable/password_drawable"
        android:drawableLeft="@drawable/password_drawable"
        android:drawablePadding="10dp"
        android:hint="confirm_password"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.614" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="162dp"
        android:layout_height="62dp"
        android:layout_margin="18dp"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:text="Register"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
